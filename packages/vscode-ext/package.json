{
  "name": "@zenscript-language-tools/vscode-ext",
  "displayName": "ZenScript Language Tools",
  "version": "1.0.0",
  "description": "",
  "author": "ikx",
  "license": "MIT",
  "keywords": [],
  "main": "./out/extension",
  "engines": {
    "vscode": "^1.78.0"
  },
  "contributes": {
    "languages": [
      {
        "id": "zenscript",
        "aliases": [
          "ZenScript"
        ],
        "extensions": [
          ".zs"
        ],
        "configuration": "./language/language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "zenscript",
        "scopeName": "source.zs",
        "path": "./language/ZenScript.tmLanguage.json"
      }
    ],
    "configuration": {
      "title": "ZenScript Language Tools",
      "properties": {
        "zenscript.languageServer.trace.server": {
          "scope": "window",
          "type": "string",
          "enum": [
            "off",
            "messages",
            "verbose"
          ],
          "default": "off",
          "description": "Traces the communication between VS Code and the language server."
        }
      }
    }
  },
  "scripts": {
    "dev": "nr watch:tsc",
    "compile": "nr yaml2json && npx tsc -b ./tsconfig.json",
    "watch:tsc": "tsc -b ./tsconfig.json -w",
    "build:tsc": "tsc -b ./tsconfig.json",
    "yaml2json": "cd ./src && yamljson ZenScript.tmLanguage.yaml > ../language/ZenScript.tmLanguage.json"
  },
  "dependencies": {
    "@types/vscode": "^1.78.1",
    "@zenscript-language-tools/language-server": "workspace:^",
    "vscode-languageclient": "^8.1.0"
  },
  "devDependencies": {
    "yamljson": "^1.0.70"
  }
}
