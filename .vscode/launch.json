{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Run ZenScript extension",
      "type": "extensionHost",
      "request": "launch",
      "args": [
        "--inspector",
        "--extensionDevelopmentPath=${workspaceFolder}/packages/vscode-ext"
      ],
      "outFiles": [
        "${workspaceFolder}/packages/vscode-ext/out/**/*.js"
      ],
      "preLaunchTask": {
        "type": "npm",
        "script": "ext:dev"
      }
    }
  ]
}
